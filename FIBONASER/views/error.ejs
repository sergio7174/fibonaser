<% layout('layouts/boilerplate') %>

<style onload="this.media='all'"> 

    .error {
        position: relative;
        width: 100%;
        min-height: 90vh;
        justify-content: center;
        align-items: center;
        overflow: hidden;
        margin-top: 77px;
    }
    .background__image {
        position: absolute;
        width: 100%;
        min-height: 100vh;
        background-image: url('/img/illustration/tree_sunset.jpeg');
        background-repeat: no-repeat;
        background-size: cover;
        background-position: center;
    }

    @media (max-width: 63.9375em) {
        .background__image {
            min-height: 100%;
        }
    }

    /* .footer {
        position: absolute;
        width: 100%;
        bottom: 0;
    } */

    @media only screen and (max-width: 39.9375em) {
        .footer {
            position: relative;
        }
    }

    @media only screen and (max-width: 63.9375em) {
        .footer {
            position: relative;
        }
    }
</style>

<section class="error">

    <div class="background__image"></div>

    <div class="container--pall row">
        <div class="col-6 offset-3 pt-5 pb-5">
            <div class="alert alert-danger" role="alert">
                <h4 class="alert-heading pb-2"><%= err.message  %> </h4>
                <p class="mb-0">¡Oh, no! ¡Hay algo mal! ¡Podría haber monstruos al acecho aquí! o tal vez un fantasma (?) HIHIHIHI :)</p>
                <hr>
                <p class="mb-0">Lo que estás buscando no se encuentra, ¡asegúrate de que lo que estás buscando es correcto!</p>
            </div>
        </div>
    </div>
</section>

<script async>
    document.title = "¡Página no encontrada! | FiboSer"
</script>